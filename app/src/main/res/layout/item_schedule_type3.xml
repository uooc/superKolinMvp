<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:id="@+id/v_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/aliwx_editor_more_normal"/>
        <View
            android:id="@+id/v_line"
            android:layout_toRightOf="@+id/v_a"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/v_a"
            android:textColor="@color/C1"
            android:textSize="@dimen/T5_1"
            android:layout_above="@+id/v_line"
            android:text="ONE STORY"/>
        <TextView
            android:id="@+id/tv_contian"
            android:layout_below="@+id/v_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/v_a"
            android:textColor="@color/C1"
            android:textSize="@dimen/T3"
            android:text="梅雨台风"/>
    </RelativeLayout>
</layout>
